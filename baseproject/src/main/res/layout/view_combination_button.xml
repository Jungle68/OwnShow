<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/iv_left_img"
        android:layout_width="@dimen/icon_for_user_center"
        android:layout_height="@dimen/icon_for_user_center"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_mid"
        tools:src="@mipmap/common_ico_bottom_message_high"/>

    <TextView
        android:id="@+id/tv_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_left_img"
        android:paddingStart="@dimen/spacing_normal"
        android:textColor="@color/important_for_content"
        android:textSize="@dimen/size_content_assist"
        skin:enable="true"
        tools:text="我的订阅"
        />

    <ImageView
        android:id="@+id/iv_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_mid"
        tools:src="@mipmap/login_ico_closeye"/>

    <TextView
        android:id="@+id/tv_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_toStartOf="@id/iv_right_img"
        android:paddingEnd="@dimen/spacing_small"
        android:textColor="@color/normal_for_assist_text"
        android:textSize="@dimen/size_content_comment"
        tools:text="34.8M"/>

    <View
        android:id="@+id/v_line"
        style="@style/style_divider_horizontal_light"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

